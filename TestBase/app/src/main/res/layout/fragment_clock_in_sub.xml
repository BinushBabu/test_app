<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/clock_in_icon1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_chat"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_today_task_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Reading"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_today_task_month_year"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon1"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon1" />

            <TextView
                android:id="@+id/tv_today_task_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="First day Today"
                android:textColor="@color/gray"
                android:textSize="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon1"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon1"
                app:layout_constraintTop_toBottomOf="@id/tv_today_task_day" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_15sdp"
                android:button="@drawable/checkbox_selector"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_header_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_header_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/clock_in_icon2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_chat_home"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_today_task_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Movement"
                android:textColor="@color/black"

                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_today_task_month_year2"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon2"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon2" />

            <TextView
                android:id="@+id/tv_today_task_month_year2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Its been a day"
                android:textColor="@color/gray"
                android:textSize="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon2"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon2"
                app:layout_constraintTop_toBottomOf="@id/tv_today_task_day2" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_15sdp"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_header_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_header_view2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/clock_in_icon3"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_chat"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_today_task_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/learn_the_word"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_today_task_month_year3"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon3"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon3" />

            <TextView
                android:id="@+id/tv_today_task_month_year3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="It beens 2 days"
                android:textColor="@color/gray"
                android:textSize="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon3"
                app:layout_constraintStart_toEndOf="@id/clock_in_icon3"
                app:layout_constraintTop_toBottomOf="@id/tv_today_task_day3" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_15sdp"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@id/clock_in_icon3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/clock_in_icon3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

